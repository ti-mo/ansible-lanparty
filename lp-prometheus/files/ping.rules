# Alert for any instance that is unreachable for >5 minutes.
ALERT IcmpPingFail
  IF probe_success == 0
  FOR 5s
  LABELS { 
    severity = "critical",
  }
  ANNOTATIONS {
    summary = "Device {{ $labels.instance }} down",
    description = "{{ $labels.instance }} has failed to respond to ICMP.",
  }